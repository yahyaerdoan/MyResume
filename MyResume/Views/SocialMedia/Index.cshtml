@model List<MyResume.Entities.SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">SocialMedia List</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Icon</th>
                    <th>Url</th>
                    <th>Statu</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SocialMediaId</td>
                        <td>@item.Name</td>
                        <td>@item.Icon</td>
                        <td>@item.Url</td>
                        @if (item.Statu == true)
                        {
                            <td style="color:green">Active</td>
                        }
                        else
                        {
                            <td style="color:red">Passive</td>
                        }

                        <td>
                            <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-primary">Update</a>
                        </td>
                        <td>
                            <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="card-footer clearfix">
            <button type="button" data-toggle="modal" data-target="#ModalForAddSocialMedia" class="btn btn-outline-primary col-md-12">Create New Social Media</button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal" id="ModalForAddSocialMedia">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Create Social Media</h1>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/SocialMedia/CreateSocialMedia/" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="name" name="Name" required>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Icon</label>
                                <input type="text" class="form-control" placeholder="icon" name="Icon" required>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Url</label>
                                <input type="text" class="form-control" placeholder="url" name="Url" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                        <button class="btn btn-outline-primary">Create New Social Media</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

