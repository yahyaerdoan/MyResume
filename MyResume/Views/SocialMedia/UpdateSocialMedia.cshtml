@model MyResume.Entities.SocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Update SocialMedia</h3>
        </div>
        <div class="card-body">
            <form role="form" method="post" action="/SocialMedia/UpdateSocialMedia/">
                <div class="row">
                    <div class="col-sm-6" hidden>
                        <div class="form-group">
                            <label>Social Media Id</label>
                            <input type="text" class="form-control" placeholder="social media id" name="SocialMediaId" value="@Model.SocialMediaId">
                        </div>
                    </div>
                    <div class="col-sm-6" hidden>
                        <div class="form-group">
                            <label>About Id</label>
                            <input type="text" class="form-control" placeholder="about id" name="AboutId" value="@Model.AboutId">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" placeholder="name" name="Name" value="@Model.Name">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Icon</label>
                            <input type="text" class="form-control" placeholder="icon" name="Icon" value="@Model.Icon">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Url</label>
                            <input type="text" class="form-control" placeholder="url" name="Url" value="@Model.Url">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Statu</label>
                            <input type="text" class="form-control" placeholder="Enter True or False" name="Statu" value="@Model.Statu">
                        </div>
                    </div>
                </div>              
                <button type="submit" class="btn btn-outline-success col-md-12">Update New Social Media</button>
            </form>
        </div>
    </div>
</div>
