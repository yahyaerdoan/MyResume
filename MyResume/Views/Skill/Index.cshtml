@model List<MyResume.Entities.Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string colorRate = "";}
<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Skill List</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Task</th>
                        <th>Description</th>
                        <th>Progress</th>
                        <th style="width: 40px">Rate</th>
                        <th>Upate</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <div class="progress-bar progress-bar-success"></div>
                    @foreach (var item in Model)
                    {
                        if (item.Rate >= 0 && item.Rate <= 50)
                        {
                            colorRate = "progress-bar  bg-danger";
                        }

                        if (item.Rate >= 51 && item.Rate <= 70)
                        {
                            colorRate = "progress-bar  bg-warning";
                        }

                        if (item.Rate >= 71 && item.Rate <= 84)
                        {
                            colorRate = "progress-bar  bg-info";
                        }


                        if (item.Rate >= 85 && item.Rate <= 100)
                        {
                            colorRate = "progress-bar  bg-success";
                        }

                        <tr>
                            <td>@item.SkillId</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="progress progress-xs">
                                    <div class="@colorRate" style="width: @item.Rate%; border-radius:0.3rem"></div>
                                </div>
                            </td>
                            <td>
                                <span class="@colorRate"  style="border-radius:0.3rem">@item.Rate</span>
                            </td>
                            <td>
                                <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-outline-primary">
                                    <i class="fas fa-pencil-alt"></i>
                                Update</a>
                            </td>
                            <td>
                                <a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>           
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <a href="/Skill/CreateSkill/" class="btn btn-outline-primary col-md-12">Create New Skill</a>
        </div>
    </div>
</div>
