@model List<MyResume.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">About List</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Description</th>
                    <th>PhoneNumber</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Country</th>
                    <th>ZipCode</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AboutId</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td style="text-align:justify">@item.Description</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.State</td>
                        <td>@item.Country</td>
                        <td>@item.ZipCode</td>
                        <td>@item.Image</td>
                        <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-primary">Update</a></td>
                        <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            </table>
            <a href="/About/CreateAbout/" class="btn btn-outline-primary col-md-12">Create New About</a>
        </div>
    </div>
</div>