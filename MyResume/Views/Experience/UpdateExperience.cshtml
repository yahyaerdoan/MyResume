@model MyResume.Entities.Experience
@{
    ViewBag.Title = "UpdateExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Update Experience</h3>
        </div>
        <div class="card-body">
            <form role="form" method="post" action="/Experience/UpdateExperience/">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Header</label>
                            <input type="text" class="form-control" placeholder="header" name="Header" required value="@Model.Header">
                            @Html.HiddenFor(e => e.ExperienceId, new { @class = "form-control", placeholder = "title" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" placeholder="title" name="Title" required value="@Model.Title">
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Starting Month</label>
                            <input type="date" class="form-control" placeholder="starting month" name="StartingMonth" required value="@Model.StartingMonth.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Starting Year</label>
                            <input type="date" class="form-control" placeholder="starting year" name="StartingYear" required value="@Model.StartingYear.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Ending Month</label>
                            <input type="date" class="form-control" placeholder="ending month" name="EndingMonth" required value="@Model.EndingMonth.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Ending Year</label>
                            <input type="date" class="form-control" placeholder="ending year" name="EndingYear" required value="@Model.EndingYear.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" rows="3" placeholder="description" name="Description" required>@Model.Description</textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-success col-md-12">Update New Experience</button>
            </form>
        </div>
    </div>
</div>


