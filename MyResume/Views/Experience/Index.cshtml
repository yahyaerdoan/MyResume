@model List<MyResume.Entities.Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Experience List</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <th>Id</th>
                    <th>Header</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Starting Month</th>
                    <th>Starting Year</th>
                    <th>Ending Month</th>
                    <th>Ending Year</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExperienceId</td>
                        <td>@item.Header</td>
                        <td>@item.Title</td>
                        <td style="text-align:justify">@item.Description</td>
                        <td>@item.StartingMonth.ToString("MMMM")</td>
                        <td>@item.StartingYear.Year</td>
                        <td>@item.EndingMonth.ToString("MMMM")</td>
                        <td>@item.EndingYear.Year</td>
                        <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-primary">Update</a></td>
                        <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            </table>
        </div>
        <div class="card-footer clearfix">
            <a href="/Experience/CreateExperience/" class="btn btn-outline-primary col-md-12">Create New Experience</a>
        </div>
    </div>
</div>

