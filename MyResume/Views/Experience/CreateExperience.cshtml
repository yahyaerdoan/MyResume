
@{
    ViewBag.Title = "CreateExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2></h2>

<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Create Experience</h3>
        </div>
        <div class="card-body">
            <form role="form" method="post" action="/Experience/CreateExperience/">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Header</label>
                            <input type="text" class="form-control" placeholder="header" name="Header" required>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" placeholder="title" name="Title" required>
                        </div>
                    </div>  
                    
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Starting Month</label>
                            <input type="month" class="form-control" placeholder="starting month" name="StartingMonth" required>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Starting Year</label>
                            <input type="month" class="form-control" placeholder="starting year" name="StartingYear" required>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Ending Month</label>
                            <input type="month" class="form-control" placeholder="ending month" name="EndingMonth" required>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Ending Year</label>
                            <input type="month" class="form-control" placeholder="ending year" name="EndingYear" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" rows="3" placeholder="description" name="Description" required></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-success col-md-12">Create New Experience</button>
            </form>
        </div>
    </div>
</div>

