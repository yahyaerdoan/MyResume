@model List<MyResume.Entities.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Admin List</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <th>Id</th>
                    <th>User Name</th>
                    <th>Password</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AdminId</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        <td><a href="/Admin/UpdateAdmin/@item.AdminId" class="btn btn-outline-primary">Update</a></td>
                        <td><a href="/Admin/DeleteAdmin/@item.AdminId" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            </table>
        </div>
        <div class="card-footer clearfix">
            <a href="/Admin/CreateAdmin/" class="btn btn-outline-primary col-md-12">Create New Admin</a>
        </div>
    </div>
</div>

