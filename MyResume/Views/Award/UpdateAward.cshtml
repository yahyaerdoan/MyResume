@model MyResume.Entities.Award
@{
    ViewBag.Title = "UpdateAward";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Update Award</h3>
        </div>
        <div class="card-body">
            <form role="form" method="post" action="/Award/UpdateAward/">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" placeholder="title" name="Title" required value="@Model.Title">
                            @Html.HiddenFor(a => a.AwardId)
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Category</label>
                            <input type="text" class="form-control" placeholder="category" name="Category" required value="@Model.Category">
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Subject</label>
                            <input type="text" class="form-control" placeholder="subject" name="Subject" required value="@Model.Subject">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>IssuedFrom</label>
                            <input type="text" class="form-control" placeholder="issued from" name="IssuedFrom" required value="@Model.IssuedFrom">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Icon</label>
                            <input type="text" class="form-control" placeholder="icon" name="icon" required value="@Model.Icon">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>IssuedDate</label>
                            <input type="date" class="form-control" placeholder="issued date" name="IssuedDate" required value="@Model.IssuedDate" >
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" rows="3" placeholder="description" name="Description" required>@Model.Description</textarea>                     
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-success col-md-12">Update New Award</button>
            </form>
        </div>
    </div>
</div>

